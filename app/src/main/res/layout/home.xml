<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FDEBD4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        //抓資料庫值直接顯示(像芷安他們的)
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/bg_border"  />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="姓名"/>

        <TextView
            android:id="@+id/money"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="樂幣" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_get"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#CCC79C"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:drawableTop="@drawable/ic_qrcode_black_24dp"
            android:text="我的條碼" />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="#CCC79C"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textSize="20dp"
            android:drawableTop="@drawable/ic_scan_black_24dp"
            android:text="掃描器" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_record"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#CCC79C"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textSize="20dp"
            android:drawableTop="@drawable/ic_record_black_24dp"
            android:text="日記本" />

        <Button
            android:id="@+id/btn_activity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="#CCC79C"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textSize="20dp"
            android:drawableTop="@drawable/ic_activity_black_24dp"
            android:text="活動" />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"></LinearLayout>
</LinearLayout>
